# Server Configuration
PORT=5013
NODE_ENV=development

# Auth Configuration
# Options: mock | supabase
AUTH_MODE=mock

# Storage Configuration
# Options: memory | database
STORAGE_MODE=memory

# Supabase Configuration (required when AUTH_MODE=supabase)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key

# Database Configuration (required when STORAGE_MODE=database)
# For Supabase: Get from Project Settings → Database → Connection String → URI
# DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# OpenCage Geocoding API (optional - for reverse geocoding GPS coordinates)
# OPENCAGE_API_KEY=your-opencage-api-key
