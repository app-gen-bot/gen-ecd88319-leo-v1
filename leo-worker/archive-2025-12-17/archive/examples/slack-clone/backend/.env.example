# Environment
ENVIRONMENT=development

# AWS Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1
DYNAMODB_ENDPOINT_URL=http://localhost:8001  # For local development

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# S3 Configuration
S3_BUCKET_NAME=slack-clone-files
S3_BUCKET_REGION=us-east-1

# Email (AWS SES)
SES_FROM_EMAIL=noreply@yourapp.com

# Application
APP_NAME=Slack Clone
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/*,application/pdf,text/*

# WebSocket
WS_MESSAGE_RATE_LIMIT=10  # messages per second
WS_PING_INTERVAL=30  # seconds