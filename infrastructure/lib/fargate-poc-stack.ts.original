import * as cdk from 'aws-cdk-lib';
import * as ec2 from 'aws-cdk-lib/aws-ec2';
import * as ecs from 'aws-cdk-lib/aws-ecs';
import * as ecr from 'aws-cdk-lib/aws-ecr';
import * as elbv2 from 'aws-cdk-lib/aws-elasticloadbalancingv2';
import * as s3 from 'aws-cdk-lib/aws-s3';
import * as logs from 'aws-cdk-lib/aws-logs';
import * as iam from 'aws-cdk-lib/aws-iam';
import * as secretsmanager from 'aws-cdk-lib/aws-secretsmanager';
import { Construct } from 'constructs';

export class FargatePocStack extends cdk.Stack {
  constructor(scope: Construct, id: string, props?: cdk.StackProps) {
    super(scope, id, props);

    const vpc = new ec2.Vpc(this, 'LaunchVPC', {
      maxAzs: 2,
      natGateways: 0,
      subnetConfiguration: [
        {
          cidrMask: 24,
          name: 'Public',
          subnetType: ec2.SubnetType.PUBLIC,
        },
      ],
    });

    const supabaseUrlSecret = secretsmanager.Secret.fromSecretNameV2(
      this,
      'SupabaseUrl',
      'launch/supabase-url'
    );

    const supabaseAnonKeySecret = secretsmanager.Secret.fromSecretNameV2(
      this,
      'SupabaseAnonKey',
      'launch/supabase-anon-key'
    );

    const supabaseServiceRoleKeySecret = secretsmanager.Secret.fromSecretNameV2(
      this,
      'SupabaseServiceRoleKey',
      'launch/supabase-service-role-key'
    );

    const appBucket = new s3.Bucket(this, 'GeneratedAppsBucket', {
      bucketName: `launch-generated-apps-${this.account}`,
      versioned: false,
      publicReadAccess: false,
      blockPublicAccess: s3.BlockPublicAccess.BLOCK_ALL,
      encryption: s3.BucketEncryption.S3_MANAGED,
      lifecycleRules: [
        {
          id: 'DeleteOldApps',
          enabled: true,
          expiration: cdk.Duration.days(30),
        },
      ],
      removalPolicy: cdk.RemovalPolicy.DESTROY,
      autoDeleteObjects: true,
    });

    const claudeTokenSecret = secretsmanager.Secret.fromSecretNameV2(
      this,
      'ClaudeOAuthToken',
      'launch/claude-oauth-token'
    );

    const cluster = new ecs.Cluster(this, 'LaunchCluster', {
      clusterName: 'launch-poc',
      vpc,
      containerInsights: true,
    });

    const uiRepository = new ecr.Repository(this, 'UIRepository', {
      repositoryName: 'launch-ui',
      removalPolicy: cdk.RemovalPolicy.DESTROY,
      autoDeleteImages: true,
    });

    const orchestratorRepository = new ecr.Repository(this, 'OrchestratorRepository', {
      repositoryName: 'launch-orchestrator',
      removalPolicy: cdk.RemovalPolicy.DESTROY,
      autoDeleteImages: true,
    });

    const appGeneratorRepository = new ecr.Repository(this, 'AppGeneratorRepository', {
      repositoryName: 'launch-app-generator',
      removalPolicy: cdk.RemovalPolicy.DESTROY,
      autoDeleteImages: true,
    });

    const orchestratorTaskRole = new iam.Role(this, 'OrchestratorTaskRole', {
      assumedBy: new iam.ServicePrincipal('ecs-tasks.amazonaws.com'),
      description: 'Task role for orchestrator service',
    });

    orchestratorTaskRole.addToPolicy(new iam.PolicyStatement({
      effect: iam.Effect.ALLOW,
      actions: [
        'ecs:RunTask',
        'ecs:StopTask',
        'ecs:DescribeTasks',
        'ecs:ListTasks',
      ],
      resources: ['*'],
      conditions: {
        'ArnEquals': {
          'ecs:cluster': cluster.clusterArn,
        },
      },
    }));

    orchestratorTaskRole.addToPolicy(new iam.PolicyStatement({
      effect: iam.Effect.ALLOW,
      actions: ['iam:PassRole'],
      resources: ['*'],
      conditions: {
        'StringLike': {
          'iam:PassedToService': 'ecs-tasks.amazonaws.com',
        },
      },
    }));

    appBucket.grantReadWrite(orchestratorTaskRole);
    claudeTokenSecret.grantRead(orchestratorTaskRole);
    supabaseUrlSecret.grantRead(orchestratorTaskRole);
    supabaseAnonKeySecret.grantRead(orchestratorTaskRole);
    supabaseServiceRoleKeySecret.grantRead(orchestratorTaskRole);

    const appGeneratorTaskRole = new iam.Role(this, 'AppGeneratorTaskRole', {
      assumedBy: new iam.ServicePrincipal('ecs-tasks.amazonaws.com'),
      description: 'Task role for app generator tasks',
    });

    appBucket.grantWrite(appGeneratorTaskRole);
    claudeTokenSecret.grantRead(appGeneratorTaskRole);

    const executionRole = new iam.Role(this, 'TaskExecutionRole', {
      assumedBy: new iam.ServicePrincipal('ecs-tasks.amazonaws.com'),
      managedPolicies: [
        iam.ManagedPolicy.fromAwsManagedPolicyName('service-role/AmazonECSTaskExecutionRolePolicy'),
      ],
    });

    claudeTokenSecret.grantRead(executionRole);
    supabaseUrlSecret.grantRead(executionRole);
    supabaseAnonKeySecret.grantRead(executionRole);
    supabaseServiceRoleKeySecret.grantRead(executionRole);

    const orchestratorTaskDef = new ecs.FargateTaskDefinition(this, 'OrchestratorTaskDef', {
      memoryLimitMiB: 512,
      cpu: 256,
      taskRole: orchestratorTaskRole,
      executionRole,
    });

    orchestratorTaskDef.addContainer('orchestrator', {
      image: ecs.ContainerImage.fromEcrRepository(orchestratorRepository, 'latest'),
      logging: ecs.LogDrivers.awsLogs({
        streamPrefix: 'orchestrator',
        logRetention: logs.RetentionDays.ONE_WEEK,
      }),
      secrets: {
        SUPABASE_URL: ecs.Secret.fromSecretsManager(supabaseUrlSecret),
        SUPABASE_ANON_KEY: ecs.Secret.fromSecretsManager(supabaseAnonKeySecret),
        SUPABASE_SERVICE_ROLE_KEY: ecs.Secret.fromSecretsManager(supabaseServiceRoleKeySecret),
      },
      environment: {
        NODE_ENV: 'production',
        PORT: '3001',
        AWS_REGION: this.region,
        ECS_CLUSTER: cluster.clusterName,
        TASK_SUBNETS: vpc.publicSubnets.map(s => s.subnetId).join(','),
        S3_BUCKET: appBucket.bucketName,
      },
      portMappings: [{
        containerPort: 3001,
        protocol: ecs.Protocol.TCP,
      }],
    });

    const appGeneratorTaskDef = new ecs.FargateTaskDefinition(this, 'AppGeneratorTaskDef', {
      memoryLimitMiB: 2048,
      cpu: 1024,
      taskRole: appGeneratorTaskRole,
      executionRole,
    });

    appGeneratorTaskDef.addContainer('app-generator', {
      containerName: 'app-generator',
      image: ecs.ContainerImage.fromEcrRepository(appGeneratorRepository, 'latest'),
      logging: ecs.LogDrivers.awsLogs({
        streamPrefix: 'app-generator',
        logRetention: logs.RetentionDays.ONE_WEEK,
      }),
      secrets: {
        CLAUDE_CODE_OAUTH_TOKEN: ecs.Secret.fromSecretsManager(claudeTokenSecret),
      },
      environment: {
        AWS_REGION: this.region,
        S3_BUCKET: appBucket.bucketName,
      },
    });

    const orchestratorSecurityGroup = new ec2.SecurityGroup(this, 'OrchestratorSG', {
      vpc,
      description: 'Security group for orchestrator service',
      allowAllOutbound: true,
    });

    const appGeneratorSecurityGroup = new ec2.SecurityGroup(this, 'AppGeneratorSG', {
      vpc,
      description: 'Security group for app generator tasks',
      allowAllOutbound: true,
    });

    const albSecurityGroup = new ec2.SecurityGroup(this, 'ALBSG', {
      vpc,
      description: 'Security group for ALB',
      allowAllOutbound: true,
    });

    const allowedIp = '187.223.16.15/32';

    albSecurityGroup.addIngressRule(
      ec2.Peer.ipv4(allowedIp),
      ec2.Port.tcp(443),
      'Allow HTTPS from specific IP'
    );

    albSecurityGroup.addIngressRule(
      ec2.Peer.ipv4(allowedIp),
      ec2.Port.tcp(80),
      'Allow HTTP from specific IP'
    );

    orchestratorSecurityGroup.addIngressRule(
      albSecurityGroup,
      ec2.Port.tcp(3001),
      'Allow traffic from ALB'
    );

    const alb = new elbv2.ApplicationLoadBalancer(this, 'LaunchALB', {
      vpc,
      internetFacing: true,
      securityGroup: albSecurityGroup,
      vpcSubnets: {
        subnetType: ec2.SubnetType.PUBLIC,
      },
    });

    const orchestratorService = new ecs.FargateService(this, 'OrchestratorService', {
      cluster,
      taskDefinition: orchestratorTaskDef,
      desiredCount: 1,
      assignPublicIp: true,
      securityGroups: [orchestratorSecurityGroup],
      vpcSubnets: {
        subnetType: ec2.SubnetType.PUBLIC,
      },
      healthCheckGracePeriod: cdk.Duration.seconds(60),
    });

    const targetGroup = new elbv2.ApplicationTargetGroup(this, 'OrchestratorTargetGroup', {
      vpc,
      port: 3001,
      protocol: elbv2.ApplicationProtocol.HTTP,
      targetType: elbv2.TargetType.IP,
      healthCheck: {
        path: '/health',
        interval: cdk.Duration.seconds(30),
        timeout: cdk.Duration.seconds(5),
        healthyThresholdCount: 2,
        unhealthyThresholdCount: 3,
      },
    });

    orchestratorService.attachToApplicationTargetGroup(targetGroup);

    const httpListener = alb.addListener('HTTPListener', {
      port: 80,
      open: true,
      defaultAction: elbv2.ListenerAction.forward([targetGroup]),
    });

    new cdk.CfnOutput(this, 'SupabaseUrlSecretArn', {
      value: supabaseUrlSecret.secretArn,
      description: 'Supabase URL secret ARN',
      exportName: 'SupabaseUrlSecretArn',
    });

    new cdk.CfnOutput(this, 'SupabaseAnonKeySecretArn', {
      value: supabaseAnonKeySecret.secretArn,
      description: 'Supabase anon key secret ARN',
      exportName: 'SupabaseAnonKeySecretArn',
    });

    new cdk.CfnOutput(this, 'SupabaseServiceRoleKeySecretArn', {
      value: supabaseServiceRoleKeySecret.secretArn,
      description: 'Supabase service role key secret ARN',
      exportName: 'SupabaseServiceRoleKeySecretArn',
    });

    new cdk.CfnOutput(this, 'ALBDnsName', {
      value: alb.loadBalancerDnsName,
      description: 'Application Load Balancer DNS Name',
      exportName: 'LaunchALBDnsName',
    });

    new cdk.CfnOutput(this, 'AppGeneratorTaskDefArn', {
      value: appGeneratorTaskDef.taskDefinitionArn,
      description: 'App Generator Task Definition ARN',
      exportName: 'AppGeneratorTaskDefArn',
    });

    new cdk.CfnOutput(this, 'TaskSecurityGroupId', {
      value: appGeneratorSecurityGroup.securityGroupId,
      description: 'Security Group ID for app generator tasks',
      exportName: 'AppGeneratorSecurityGroupId',
    });

    new cdk.CfnOutput(this, 'TaskSubnetIds', {
      value: vpc.publicSubnets.map(s => s.subnetId).join(','),
      description: 'Subnet IDs for app generator tasks',
      exportName: 'AppGeneratorSubnetIds',
    });

    new cdk.CfnOutput(this, 'S3BucketName', {
      value: appBucket.bucketName,
      description: 'S3 bucket for generated apps',
      exportName: 'GeneratedAppsBucketName',
    });

    new cdk.CfnOutput(this, 'ClaudeTokenSecretArn', {
      value: claudeTokenSecret.secretArn,
      description: 'Claude OAuth token secret ARN',
      exportName: 'ClaudeTokenSecretArn',
    });

    new cdk.CfnOutput(this, 'UIRepositoryUri', {
      value: uiRepository.repositoryUri,
      description: 'ECR URI for UI repository',
    });

    new cdk.CfnOutput(this, 'OrchestratorRepositoryUri', {
      value: orchestratorRepository.repositoryUri,
      description: 'ECR URI for Orchestrator repository',
    });

    new cdk.CfnOutput(this, 'AppGeneratorRepositoryUri', {
      value: appGeneratorRepository.repositoryUri,
      description: 'ECR URI for App Generator repository',
    });
  }
}
